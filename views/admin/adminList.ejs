    document.querySelectorAll('#example_wrapper div')[5].style.overflowX = 'auto';
    document.querySelectorAll('#example_wrapper div')[5].style.margin = '';
    document.querySelectorAll('#example_wrapper div')[5].style.width = '100%';
    } );
</script>
