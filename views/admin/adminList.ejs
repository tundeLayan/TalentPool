      </table>

      <!-- ------------------------------Add Admin Modal ----------------------------->
      <!-- Modal -->
      <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content ">
                <form id="role-form">
              <div class="modal-header d-flex justify-content-center">
                  <h5 class="modal-title ">Add Admin</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                </div>
            <div class="modal-body px-5 py-3" style="padding: 0 !important">
              <div class="container px-5">
                <div class="row">
                    <div class="col-md-6">
                            <div class="form-group my-4">
                                    <label for="firstName">First Name</label>
                                    <input type="text" class="form-control" name="" id="firstName" placeholder="First Name" required>
                                  </div>
                    </div>
                  <div class="col-md-6">
                        <div class="form-group my-4">
                                <label for="lastName">Lastname</label>
                                <input type="Text" class="form-control" name="" id="lastName" placeholder="Lastname" required>
                              </div>                    
                  </div>
                  <div class="col-md-12">
                        <div class="form-group mb-4">
                                <label for="email">Email Address</label>
                                <input type="email" class="form-control" name="" id="email" placeholder="Email Address" required>
                              </div>
      
                              <div class="form-group my-4">
                                      <label for="password">Password</label>
                                      <input type="password" class="form-control" name="" id="password" placeholder="Password" required>
                              </div>
      
                              <div class="form-group my-4">
                                      <label for="phone">Phone</label>
                                      <input type="number" class="form-control" name="" id="password" placeholder="Enter Phone Number" required>
                                    </div>                    
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <button id="button" type="submit" class="btn payment custom-button py-2 px-4">
                  Save</button>
            </div>
                </form>
          </div>
        </div>
      </div>
      <!-- ------------------------------Add Admin Modal End--------------------------->
