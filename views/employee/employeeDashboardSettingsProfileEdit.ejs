<!DOCTYPE html>
<html lang="en">

<head>
    <title>Profile</title>
    <%- include('../templates/dashboardHead.ejs') %>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/employeeDashboardSettingsProfileEdit.css" />
</head>

<body>
    <%- include('../templates/employeeDashboardSidebar.ejs', { sideNavRoute: 'settings'}) %>
    <%- include('../templates/dashboardHeader.ejs') %>

    <main id="main" style="margin-top: 7rem!important;">
        <% if (errorMessage) { %>
        <div role="alert" class="alert alert-danger text-center user-message user-message--error"><%= errorMessage %>
        </div>
        <% }if (success) { %>
        <div role="alert" class="alert alert-success text-center user-message user-message--error"><%= success %></div>
        <% } %>

        <section class="my-3 py-3 px-md-5">
            <div class="col-12 px-5">
                <div>
                    <p class="f-20">Personal Information</p>
                </div>
                <div class="d-flex flex-lg-row flex-column-reverse row">
                    <form action="/employee/update/profile?_method=PATCH" id="edit-profile" method="POST"
                        enctype="multipart/form-data">
                        <div class="col-lg-8 col-12">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <p id="error-message"></p>
                            <p id="success-message"></p>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">First name</label>
                                    <input type="text" value="<%= user.firstName %> " class="form-control"
                                        id="firstName" name="firstName" placeholder="John">
                                </div>
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">Last name</label>
                                    <input type="text" value="<%= user.lastName %>" class="form-control" id="lastName"
                                        name="lastName" placeholder="Doe">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">Phone Number</label>
                                    <input type="text" value="<%= user.phone %>" class="form-control" name="phoneNumber"
                                        id="email" placeholder="+2348033333300">
                                </div>
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">Your Email Address</label>
                                    <input type="email" value="<%= user.email %>" class="form-control" name="email"
                                        id="contactSubject" placeholder="username@domain.com">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">Track</label>
                                    <select class="form-control" name="track" required>
                                        <option value="">Select Track</option>
                                        <option value="Frontend">Frontend</option>
                                        <option value="Backend">Backend</option>
                                        <option value="Design">Design</option>
                                        <option value="Mobile">Mobile</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">Resume</label>
                                    <input type="text" class="form-control" name="employeeCv"
                                        value="<%= employee.employeeCv %>" id="contactSubject"
                                        placeholder="Link to your resume (PDF)">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">Location</label>
                                    <input type="text" value="<%= employee.location %>" class="form-control"
                                        name="location" id="email" placeholder="Eg: Texas, USA">
                                </div>
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">username</label>
                                    <input type="text" value="<%= employee.userName %>" class="form-control"
                                        name="userName" id="contactSubject" placeholder="your username">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-12">
                                    <label>Availability</label>
                                    <select class="form-control" name="availability" required>
                                        <option value="">Select Availability</option>
                                        <option value="Not-Available">Not Available</option>
                                        <option value="On-site">On-Site</option>
                                        <option value="Remote">Remote</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6 col-12">
                                    <label for="formGroupExampleInput">LinkedIn Link</label>
                                    <input type="text" value="" class="form-control" id="contactSubject"
                                        placeholder="https://websitedomain.com" disabled>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="form-group"><label>Profile Image</label>
                                <div class="form-group image-upload">
                                    <label for="file-input">
                                        <img src="/images/upload-photo.svg" />
                                    </label>
                                    <input id="file-input" value="<%= employee.image %>" name="image" type="file" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn col-12 col-lg-3 purple white mt-3 ml-3 mr-5">Save
                            Changes</button>
                    </form>
                </div>
            </div>
        </section>
    </main>

</body>

</html>

<%- include('../templates/flashmessagesclear') %>