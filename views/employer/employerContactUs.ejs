<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ContactUs</title>
    <link rel="stylesheet" href="/stylesheets/employerContactUs.css" />
    <%- include('../templates/dashboardHead.ejs') %>
</head>

<body>
    <%- include('../templates/employerDashboardSidebar.ejs') %>
    <%- include('../templates/dashboardHeader.ejs') %>
    <main id="main">
        <div id="employerContactUs" class="d-lg-flex">

            <%- include('../templates/employerDashboardPrivacyTabs.ejs', { tabRoute: 'contactUs'})%>

            <section class="contactUs-padding container">
                <div class="row">
                    <div class="col-12">
                        <p class="contactUs-header mb-4">Contact Us</p>
                        <form id="employerDashboardContactUs" action="" method="POST" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="form-label">First name</label>
                                    <input type="text" value="" class="form-control" id="firstName" placeholder="John">
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Last name</label>
                                    <input type="text" value="" class="form-control" id="lastName" placeholder="Doe">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="form-label">Email</label>
                                    <input type="email" value="" class="form-control" id="email"
                                        placeholder="username@domain.com">
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Subject</label>
                                    <input type="text" value="" class="form-control" id="contactSubject"
                                        placeholder="Your subject">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-12">
                                    <label class="form-label">Message</label>
                                    <textarea style="resize:none;" value="" class="form-control" id="contactMessage"
                                        placeholder="Your Message" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <button type="submit"
                                    class="form-group btn btn-purple col-12 col-md-5 col-lg-4 mt-3 mx-md-2">Send
                                    Message</button>
                                <button type="submit"
                                    class="form-group btn btn-purple col-12 col-md-5 col-lg-4 mt-3 mx-md-2">Check ticket
                                    status</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>

    </main>


</body>

</html>