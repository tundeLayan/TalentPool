<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Talent Haven | Privacy Settings</title>
    <link href="https://fonts.googleapis.com/css2?family=Manrope&display=swap" rel="stylesheet">

    <!-- Boiler Plate CSS -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">


    <!-- Dashboard CSS -->
    <link rel="stylesheet" href="/stylesheets/dashboardSidenav.css">
    <link rel="stylesheet" href="/stylesheets/dashboardHeader.css">
    <link rel="stylesheet" href="/stylesheets/employer-dashboard-privacy-settings.css">
    <link rel="stylesheet" href="/stylesheets/loginAndSecurity.css">

</head>
<body>

    <%- include('../templates/employerDashboardSidebar.ejs') %>
    <%- include('../templates/dashboardHeader.ejs') %>
<main id="main">
  <section class="dashboard-settings-container-pt ml-0">

      <section class="dashboard-settings-main-pt">

          <div class="container row">

              <%- include('../templates/employerDashboardPrivacyTabs.ejs', { tabRoute: 'login'})%>

              <div class="col-md-9 col-12 privacy-settings">
                 
                  <section class="security mt-5">
                      <!-- <div class="alert alert-danger mb-3" role="alert">
                          Password was wrong
                        </div> -->
                      <h3 class="mb-3">
                          Change Password
                      </h3>
                      <form class="" action="">
                          <div class="form-group mb-4">
                            <label class="mb-1" for="current-password">Existing Password</label>
                            <input type="password" class="form-control" id="current-password" aria-describedby="current-password">
                            <small id="passwordHelp" class="form-text text-muted"></small>
                          </div>
                          <div class="form-group mb-4">
                            <label class="mb-1" for="new-password">New Password</label>
                            <input type="password" class="form-control" id="new-password">
                          </div>
                          <div class="form-group mb-5">
                            <label class="mb-1" for="confirm-password">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirm-password">
                          </div>
                          <button type="submit" class="btn custom-btn">Save Changes</button>
                        </form>
                  </section>
                  
              </div>
          </div>

      </section>

  </section>
</main>

    <!-- Bootstrap JS -->
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.js"></script>

    <!-- Dashboard JS -->
    <script src="/javascripts/dashboardNav.js"></script>
    <script src="/javascripts/dashboardSideNav.js"></script>
</body>
</html>
